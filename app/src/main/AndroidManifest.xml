<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nilson.appsportmate">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppSportMate"
        tools:targetApi="31">

        <!-- Launcher -->
        <activity
            android:name=".features.main.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Autentificación -->
        <activity
            android:name=".features.auth.ui.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".features.auth.ui.RegisterActivity"
            android:exported="false" />

        <!-- Principal / Usuario -->
        <activity
            android:name=".features.main.MainActivity"
            android:exported="false" />
        <activity
            android:name=".features.user.ui.DeportesDisponiblesActivity"
            android:exported="false" />
        <activity
            android:name=".features.user.ui.FormularioUsuarioAyuntamientoActivity"
            android:exported="false" />

        <!-- Ayuntamiento -->
        <activity
            android:name=".features.townhall.ui.FormularioAyuntamientoActivity"
            android:exported="false" />
        <activity
            android:name=".features.townhall.ui.GestionDeportesAyuntamientoActivity"
            android:exported="false" />
        <activity
            android:name=".features.townhall.ui.GestionEventosMasPlazasActivity"
            android:exported="false" />

        <!-- Si usas un formulario de deporte separado y EXISTE esta clase, déjala.
             Si no existe, bórrala también para evitar ClassNotFoundException. -->

    </application>

</manifest>
