<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- ========================= -->
    <!-- Splash -->
    <!-- ========================= -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.nilson.appsportmate.ui.splash.SplashFragment"
        android:label="@string/splash_fragment_label"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splashFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_splashFragment_to_inicioFragment"
            app:destination="@id/inicioFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- ========================= -->
    <!-- Auth -->
    <!-- ========================= -->
    <fragment
        android:id="@+id/authFragment"
        android:name="com.nilson.appsportmate.ui.auth.AuthFragment"
        android:label="@string/auth_fragment_label"
        tools:layout="@layout/fragment_auth">

        <action
            android:id="@+id/action_authFragment_to_loginFragment"
            app:destination="@id/loginFragment" />

        <action
            android:id="@+id/action_authFragment_to_rolSelectionFragment"
            app:destination="@id/rolSelectionFragment" />
    </fragment>

    <!-- ========================= -->
    <!-- Login -->
    <!-- ========================= -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.nilson.appsportmate.ui.auth.login.LoginFragment"
        android:label="@string/login_fragment_label"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_inicioFragment"
            app:destination="@id/inicioFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_loginFragment_to_menuAyuntamientoFragment"
            app:destination="@id/menuAyuntamientoFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_loginFragment_to_gestionDeportesAyuntamientoFragment"
            app:destination="@id/gestionDeportesAyuntamientoFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- ========================= -->
    <!-- Registro Usuario -->
    <!-- ========================= -->
    <fragment
        android:id="@+id/formUsuarioFragment"
        android:name="com.nilson.appsportmate.ui.auth.signUp.FormUsuarioFragment.FormUsuarioFragment"
        android:label="Registro usuario"
        tools:layout="@layout/fragment_form_usuario">

        <action
            android:id="@+id/action_formUsuarioFragment_to_inicioFragment"
            app:destination="@id/inicioFragment"
            app:popUpTo="@id/authFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- ========================= -->
    <!-- Registro Ayuntamiento -->
    <!-- ========================= -->
    <fragment
        android:id="@+id/formAyuntamientoFragment"
        android:name="com.nilson.appsportmate.ui.auth.signUp.FormAytoFragment.FormAytoFragment"
        android:label="Registro ayuntamiento"
        tools:layout="@layout/fragment_form_ayuntamiento">

        <action
            android:id="@+id/action_formAyuntamientoFragment_to_inicioFragment"
            app:destination="@id/inicioFragment"
            app:popUpTo="@id/authFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- ========================= -->
    <!-- Inicio -->
    <!-- ========================= -->
    <fragment
        android:id="@+id/inicioFragment"
        android:name="com.nilson.appsportmate.features.user.ui.menuPrincipal.InicioFragment"
        android:label="@string/inicio"
        tools:layout="@layout/fragment_inicio">

        <action
            android:id="@+id/action_inicioFragment_to_deportesDisponiblesFragment"
            app:destination="@id/deportesDisponiblesFragment" />

        <action
            android:id="@+id/action_inicioFragment_to_seleccionarNuevoAyuntamientoFragment"
            app:destination="@id/seleccionarNuevoAyuntamientoFragment" />
    </fragment>

    <fragment
        android:id="@+id/deportesDisponiblesFragment"
        android:name="com.nilson.appsportmate.features.user.ui.deportesdisponibles.DeportesDisponiblesFragment"
        android:label="Deportes disponibles"
        tools:layout="@layout/activity_deportes_disponibles" />

    <fragment
        android:id="@+id/seleccionarNuevoAyuntamientoFragment"
        android:name="com.nilson.appsportmate.features.user.ui.menuPrincipal.opcionesMenu.SeleccionarNuevoAyuntamientoFragment"
        android:label="@string/cambiar_ayuntamiento"
        tools:layout="@layout/fragment_seleccionar_nuevo_ayuntamiento" />

    <!-- ========================= -->
    <!-- Ayuntamiento -->
    <!-- ========================= -->
    <fragment
        android:id="@+id/menuAyuntamientoFragment"
        android:name="com.nilson.appsportmate.features.townhall.ui.menuTownhall.menuAyuntamientoFragment"
        android:label="@string/inicio_ayuntamiento"
        tools:layout="@layout/fragment_menu_ayuntamiento">

        <action
            android:id="@+id/action_menuAyuntamientoFragment_to_gestionDeportesAyuntamientoFragment"
            app:destination="@id/gestionDeportesAyuntamientoFragment" />

        <action
            android:id="@+id/action_menuAyuntamientoFragment_to_gestionEventosMasPlazasFragment"
            app:destination="@id/gestionEventosMasPlazasFragment" />
    </fragment>

    <fragment
        android:id="@+id/gestionDeportesAyuntamientoFragment"
        android:name="com.nilson.appsportmate.features.townhall.ui.gestiondeportes.GestionDeportesAyuntamientoFragment"
        android:label="Gestión de deportes"
        tools:layout="@layout/activity_gestion_deportes_ayuntamiento">

        <action
            android:id="@+id/action_gestionDeportesAyuntamientoFragment_to_gestionEventosMasPlazasFragment"
            app:destination="@id/gestionEventosMasPlazasFragment" />
    </fragment>

    <fragment
        android:id="@+id/gestionEventosMasPlazasFragment"
        android:name="com.nilson.appsportmate.features.townhall.ui.gestioneventos.GestionEventosMasPlazasFragment"
        android:label="Eventos publicados"
        tools:layout="@layout/activity_gestion_eventos_mas_plazas" />

    <!-- ========================= -->
    <!-- Acciones globales -->
    <!-- ========================= -->
    <action android:id="@+id/action_global_inicioFragment" app:destination="@id/inicioFragment" />
    <action android:id="@+id/action_global_deportesDisponiblesFragment" app:destination="@id/deportesDisponiblesFragment" />
    <action android:id="@+id/action_global_gestionDeportesAyuntamientoFragment" app:destination="@id/gestionDeportesAyuntamientoFragment" />
    <action android:id="@+id/action_global_gestionEventosMasPlazasFragment" app:destination="@id/gestionEventosMasPlazasFragment" />
    <action android:id="@+id/action_global_seleccionarNuevoAyuntamientoFragment" app:destination="@id/seleccionarNuevoAyuntamientoFragment" />
    <action android:id="@+id/action_global_menuAyuntamientoFragment" app:destination="@id/menuAyuntamientoFragment" />

    <!-- ✅ CORRECCIÓN AÑADIDA -->
    <action
        android:id="@+id/action_global_rolSelectionFragment"
        app:destination="@id/rolSelectionFragment" />

    <!-- ========================= -->
    <!-- Selección de rol -->
    <!-- ========================= -->
    <fragment
        android:id="@+id/rolSelectionFragment"
        android:name="com.nilson.appsportmate.ui.auth.signUp.rol.RolSelectionFragment"
        android:label="Seleccionar rol"
        tools:layout="@layout/fragment_role_selection">

        <action
            android:id="@+id/action_rolSelectionFragment_to_formUsuarioFragment"
            app:destination="@id/formUsuarioFragment" />

        <action
            android:id="@+id/action_rolSelectionFragment_to_formAyuntamientoFragment"
            app:destination="@id/formAyuntamientoFragment" />
    </fragment>

</navigation>
