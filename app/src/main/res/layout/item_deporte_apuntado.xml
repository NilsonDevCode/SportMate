<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    android:elevation="6dp"
    app:strokeColor="?attr/colorPrimary"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/tvNombreDeporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BALONCESTO INDOOR"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textColor="@color/primary_dark" />

        <!-- DESCRIPCIÓN -->
        <TextView
            android:id="@+id/tvDescripcionActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Descripción del evento o lugar..."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:maxLines="3"
            android:ellipsize="end" />

        <!-- FILA: FECHA | HORA | LUGAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:weightSum="3">

            <!-- FECHA -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_calendar"
                    android:contentDescription="@string/fecha" />

                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="12/10/2025"
                    android:textColor="?attr/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- HORA -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_time"
                    android:contentDescription="@string/hora" />

                <TextView
                    android:id="@+id/tvHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="12:30"
                    android:textColor="?attr/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- LUGAR -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_location"
                    android:contentDescription="@string/ubicacion" />

                <TextView
                    android:id="@+id/tvLugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Centro Ins. de Deportes"
                    android:textColor="?attr/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>
        </LinearLayout>

        <!-- CINTA INFERIOR: PLAZAS | INSCRITOS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:background="?attr/colorPrimary"
            android:gravity="center_vertical"
            android:paddingHorizontal="14dp"
            android:weightSum="2">

            <!-- PLAZAS -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:tint="@android:color/white"
                    android:src="@drawable/ic_people"
                    android:contentDescription="@string/plazas" />

                <TextView
                    android:id="@+id/tvPlazas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="PLAZAS > 8"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- INSCRITOS -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical|end">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:tint="@android:color/white"
                    android:src="@drawable/ic_people"
                    android:contentDescription="@string/inscritos" />

                <TextView
                    android:id="@+id/tvInscritos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="INSCRITOS > 1"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
