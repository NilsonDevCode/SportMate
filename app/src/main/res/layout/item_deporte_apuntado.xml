<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:background="#90CAF9"
    app:cardCornerRadius="16dp"
    android:elevation="6dp"
    app:strokeColor="?attr/colorPrimary"
    app:strokeWidth="1dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="12dp">

<!-- TÍTULO -->
<TextView
    android:id="@+id/tvNombreDeporte"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="BALONCESTO INDOOR"
    android:textStyle="bold"
    android:textAllCaps="true"
    android:textSize="18sp"
    android:textColor="@color/primary_dark" />

<!-- DESCRIPCIÓN (fondo azul claro) -->
<TextView
    android:id="@+id/tvDescripcionActividad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:padding="8dp"
    android:text="Descripción del evento o lugar..."
    android:textSize="14sp"
    android:textColor="@android:color/black"
    android:maxLines="3"
    android:ellipsize="end"
    android:background="@drawable/bg_descripcion_azul_claro" />

<!-- FILA: FECHA | HORA | LUGAR -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="10dp"
    android:weightSum="6">

    <!-- FECHA -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.8"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_calendar"
            android:contentDescription="@string/fecha" />

        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="12/10/2025"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- HORA -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_time"
            android:contentDescription="@string/hora" />

        <TextView
            android:id="@+id/tvHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="12:30"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- LUGAR -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_location"
            android:contentDescription="@string/ubicacion" />

        <TextView
            android:id="@+id/tvLugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="Centro Ins. de Deportes"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>
</LinearLayout>

<!-- CINTA INFERIOR ESTILIZADA -->
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- IZQUIERDA: PLAZAS -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_strip_left"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:tint="@android:color/white"
                android:src="@drawable/ic_people"
                android:contentDescription="@string/plazas" />

            <TextView
                android:id="@+id/tvPlazas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="PLAZAS > 8"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- DERECHA: INSCRITOS -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_strip_right"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:gravity="center_vertical|end">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:tint="@android:color/white"
                android:src="@drawable/ic_people"
                android:contentDescription="@string/inscritos" />

            <TextView
                android:id="@+id/tvInscritos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="INSCRITOS > 1"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- CHEVRONES -->
    <ImageView
        android:id="@+id/ivChevrons"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/ic_chevrons"
        android:contentDescription="@null" />
</FrameLayout>

</LinearLayout>
    </com.google.android.material.card.MaterialCardView>
