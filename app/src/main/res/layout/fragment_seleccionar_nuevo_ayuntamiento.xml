<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarSeleccionAyto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:title="@string/cambiar_ayuntamiento"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSelector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarSeleccionAyto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Comunidad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_comunidad"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spComunidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Space android:layout_width="0dp" android:layout_height="8dp"/>

            <!-- Provincia -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_provincia"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spProvincia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Space android:layout_width="0dp" android:layout_height="8dp"/>

            <!-- Ciudad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_ciudad"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spCiudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Space android:layout_width="0dp" android:layout_height="8dp"/>

            <!-- Pueblo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_pueblo"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spPueblo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Space android:layout_width="0dp" android:layout_height="12dp"/>

            <!-- Nombre del pueblo elegido (solo lectura) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPuebloNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_pueblo">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPuebloNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Space android:layout_width="0dp" android:layout_height="8dp"/>

            <!-- Ayuntamiento (auto) (solo lectura) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilAytoNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/cambiar_ayuntamiento">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAytoNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Space android:layout_width="0dp" android:layout_height="12dp"/>

            <!-- Botón Guardar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guardar" />

            <!-- Botón Cancelar cambio -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelar cambio"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
