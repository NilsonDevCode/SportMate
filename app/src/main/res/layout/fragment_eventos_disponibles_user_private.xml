<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Fondo con degradado -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/gradient_background" />



    <!-- Contenido principal encima del fondo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- Header superior con título -->
        <LinearLayout
            android:id="@+id/txtTituloPantalla"
            android:background="@drawable/bg_blanco_degradado_cabeceras_titulos"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:elevation="10dp"
            android:gravity="center_vertical" >

            <!-- Título de la Pantalla -->
            <TextView
                android:id="@+id/tvTituloPantalla"
                android:text="@string/deportes_disponibles"
                android:textFontWeight="700"
                android:textSize="25sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:textAlignment="gravity" />
        </LinearLayout>

        <!-- Caja: Ayuntamiento actual -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tvPuebloTitulo"
                    android:text="Localidad actual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:textFontWeight="800"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/tvPuebloNombre"
                    android:text="—"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:textFontWeight="500"
                    android:textAllCaps="true" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvEmptyDisponibles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No hay deportes disponibles."
            android:visibility="gone"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="@android:color/white" />

        <!-- Lista de deportes -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDisponibles"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/bg_contenedor_glass"
            app:layout_constraintHeight_default="wrap" />

        <!-- Botón de volver -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSalir"
            style="@style/BotonGenericoBlanco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Salir_button"
            android:textAllCaps="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

</FrameLayout>
