<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    android:elevation="6dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_blanco_degradado_generico">

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/tvNombreDeporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:text="BALONCESTO INDOOR"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textFontWeight="900"
            android:textSize="20dp"/>

        <!-- DESCRIPCIÓN (fondo azul claro) -->
        <TextView
            android:id="@+id/tvDescripcionActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/colorSecondaryContainer"
            android:ellipsize="end"
            android:maxLines="5"
            android:padding="15dp"
            android:text="Descripción del evento o lugar..."
            android:textColor="@android:color/black"
            android:textFontWeight="400"
            android:textSize="14sp" />

        <!-- FILA: FECHA | HORA | LUGAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <!-- FECHA -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@string/fecha"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="12/10/2025"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:textFontWeight="700" />
            </LinearLayout>

            <!-- HORA -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@string/hora"
                    android:src="@drawable/ic_time" />

                <TextView
                    android:id="@+id/tvHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="12:30"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:textFontWeight="700" />
            </LinearLayout>

            <!-- LUGAR -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@string/ubicacion"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/tvLugar"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Centro Ins. de Deportes"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:textFontWeight="700" />
            </LinearLayout>
        </LinearLayout>


        <!-- CINTA INFERIOR ESTILIZADA -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- IZQUIERDA: PLAZAS -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_strip_left"
                    android:gravity="center_vertical"
                    android:paddingStart="14dp"
                    android:paddingEnd="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="@string/plazas"
                        android:src="@drawable/ic_people_plazas" />

                    <TextView
                        android:id="@+id/tvPlazas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="PLAZAS > 8"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textFontWeight="700" />
                </LinearLayout>

                <!-- DERECHA: INSCRITOS -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_strip_right"
                    android:gravity="center_vertical|end"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="@string/inscritos"
                        android:src="@drawable/ic_people_inscritos" />

                    <TextView
                        android:id="@+id/tvInscritos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="INSCRITOS > 1"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textFontWeight="700" />
                </LinearLayout>
            </LinearLayout>

            <!-- CHEVRONES -->
            <ImageView
                android:id="@+id/ivChevrons"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_chevrons_sm" />
        </FrameLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
