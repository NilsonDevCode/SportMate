<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginBottom="12dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="false"
    android:focusable="false"
    app:cardCornerRadius="5dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/bg_blanco_degradado_generico" >

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre deporte"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textFontWeight="900"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary" />

        <!-- Subtítulo: fecha hora • ubicación -->
        <TextView
            android:id="@+id/tvUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorPrimary"
            android:text="12/10/2025 18:30 • Madrid, Madrid · Pueblo" />

        <!-- Plazas -->
        <TextView
            android:id="@+id/tvPlazas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/colorPrimary"
            android:text="Plazas Disponibles: 10" />

        <!-- Conteo de inscritos -->

        <!-- Primera fila: - y + -->
        <TextView
            android:id="@+id/tvInscritosCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorPrimary"
            android:text="Inscritos: —" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMenos"
                style="@style/BotonGenericoAzul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="−"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMas"
                style="@style/BotonGenericoAzul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Inscritos y Editar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp" >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnInscritos"
                style="@style/BotonGenericoAzul"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Inscritos"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:padding="5dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditar"
                style="@style/BotonGenericoAzul"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Editar"
                android:textSize="12sp"
                android:padding="5dp"
                android:textAllCaps="true"/>

        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBorrar"
            style="@style/BotonGenericoAzul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Borrar"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
