<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸ”µ Fondo con degradado -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/gradient_background" />

    <!-- ðŸ”µ Logo semitransparente (mismo estilo que Login) -->
    <ImageView
        android:id="@+id/logoMarcaAgua"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.15"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/logo_fondo_transparente" />

    <!-- ðŸ”µ Contenido principal encima del fondo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ðŸŸ£ Caja: Ayuntamiento actual -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#AAFFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:id="@+id/tvAytoTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ayuntamiento actual"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvAytoNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="â€”"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸŸ£ TÃ­tulo de deportes disponibles -->
        <TextView
            android:id="@+id/tvTituloDisponibles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deportes disponibles"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tvEmptyDisponibles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No hay deportes disponibles."
            android:visibility="gone"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="@android:color/white" />

        <!-- ðŸŸ£ Lista de deportes -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDisponibles"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="16dp" />

        <!-- ðŸŸ£ BotÃ³n de volver -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSalir"
            style="@style/BotonGenericoBlanco"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/Salir_button"
            android:textAllCaps="true" />

    </LinearLayout>

</FrameLayout>
