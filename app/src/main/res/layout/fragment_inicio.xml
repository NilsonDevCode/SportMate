<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootInicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="0dp"
    tools:context=".features.user.ui.menuPrincipal.InicioFragment">

    <!-- TOOLBAR -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppToolbarMenu"
        app:paddingTopSystemWindowInsets="true"
        app:menu="@menu/menu_inicio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CONTENEDOR DEL CONTENIDO (con padding) -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintVertical_bias="0.0">

        <!-- FILA: FOTO + NOMBRE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <!-- FOTO -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFotoPerfil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/imgFotoPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/foto_de_perfil"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />
            </com.google.android.material.card.MaterialCardView>

            <!-- CARD BIENVENIDO -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTitulo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/tvInicio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:text="Bienvenido, Usuario"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textFontWeight="800"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


        <!-- AYUNTAMIENTO -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAyuntamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:id="@+id/tvAytoTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ayuntamiento actual"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:textFontWeight="800"
                    android:textAllCaps="true"/>

                <TextView
                    android:id="@+id/tvAytoNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="—"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:textFontWeight="500"
                    android:textAllCaps="true"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CONTENEDOR DE ACTIVIDADES -->
        <FrameLayout
            android:id="@+id/containerActividades"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp">

            <!-- ACTIVIDADES -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDeportesApuntados"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_contenedor_glass"
                tools:listitem="@layout/adapter_deporte_apuntado_user" />

            <!-- TEXTO EMPTY -->
            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/sin_eventos"
                android:textColor="@android:color/white"
                android:textFontWeight="800"
                android:textSize="20sp"
                android:visibility="gone"/>

            <!-- LOADING -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </FrameLayout>


        <!-- BOTÓN VER EVENTOS -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerDeportes"
            style="@style/BotonGenericoBlanco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/ver_deportes_disponibles"
            android:textAllCaps="true" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
